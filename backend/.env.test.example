# Test Environment Configuration
# Copy this file to .env.test and fill in your values

# Node Environment
NODE_ENV=test

# Database (separate test database recommended)
DATABASE_URL="postgresql://rest:rest123@localhost:5432/rest_treasury_test?schema=public"

# Encryption (use different key for test)
ENCRYPTION_KEY="test-encryption-key-32-bytes!"

# JWT (use different secret for test)
JWT_SECRET="test-jwt-secret-do-not-use-in-production"

# Plaid Sandbox Credentials
# Get these from: https://dashboard.plaid.com/team/keys
PLAID_CLIENT_ID="your_sandbox_client_id_here"
PLAID_SECRET="your_sandbox_secret_here"
PLAID_ENV="sandbox"

# Skip E2E tests if you don't have Plaid credentials
SKIP_PLAID_E2E=false

# Logging (set to 'debug' to see detailed logs during test failures)
LOG_LEVEL=error
